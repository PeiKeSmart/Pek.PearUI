@model DH.Cube.Areas.Admin.Views.Shared.Components.RightNavbarLanguageSwitch.RightNavbarLanguageSwitchViewModel
@{
}

<li class="layui-nav-item">
    <a href="javascript:void(0);">
        <i class="@Model?.CurrentLanguage?.Flag" title="@Model?.CurrentLanguage?.DisplayName"></i>
        <span class="d-none d-md-inline-block">@Model?.CurrentLanguage?.DisplayName</span>
    </a>
    <dl class="layui-nav-child">
        @foreach (var languageInfo in Model!.Languages!)
        {
            if (languageInfo.Name != Model!.CurrentLanguage!.Name)
            {
                <dd>
                    <a href='javascript:selectLang("@languageInfo.UniqueSeoCode");'>
                        <i class="mr-2 @languageInfo.Flag"></i>@languageInfo.DisplayName
                    </a>
                </dd>
            }
        }
    </dl>
</li>